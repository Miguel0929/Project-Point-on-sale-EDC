= form_for @supplier do |f|
  - if @supplier.errors.any?
    #error_explanation
      %h2= "#{pluralize(@supplier.errors.count, "error")} prohibited this supplier from being saved:"
      %ul
        - @supplier.errors.full_messages.each do |message|
          %li= message


  .row
    .col-6
      = f.label :"Nombre de Proveedor:"
      = f.text_field :strNombreProveedor, class:"form-control", placeholder:"Ejemplo: Marinela SA de CV"
  
    .col-6
      = f.label :"Direccion:"
      = f.text_field :strDireccion, class:"form-control", placeholder:"Ejemplo: Avenida 16 de septiembre"

  .row
    .col-6
      = f.label :"Telefono:"
      = f.text_field :strTelefono, class:"form-control", placeholder:"Ejemplo: 7312312"
    .col-6
      = f.label :"Celular:"
      = f.text_field :strCelular, class:"form-control", placeholder:"Ejemplo: 7731292374"
  
  %br
  .actions
    = f.submit 'Aceptar', class:"btn btn-success  col-md-2"
    = link_to "Atr√°s", suppliers_path, class:"btn btn-info col-md-2 "
